<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bakerapps.mobilesystemsproject.ProfileActivity">

    <TextView
        android:textSize="20dp"
        android:id="@+id/txtUsernameProfile"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txtUsernameProfile"
        android:id="@+id/myPoints"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My points:" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/txtPoints"
        android:text="0"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/myPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/totalDistance"
        android:layout_below="@id/txtPoints"
        android:layout_centerHorizontal="true"
        android:text="My total distance:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/totalDistance"
        android:text="0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDistance" />

    <TextView
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txtDistance"
        android:layout_centerHorizontal="true"
        android:id="@+id/oneKmProgress"
        android:text="1 kilometer progress:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/oneKmProgressBar"
        android:max="1000"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@id/oneKmProgress"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/oneKmProgressBar"
        android:layout_centerHorizontal="true"
        android:id="@+id/fiveKmProgress"
        android:text="5 kilometer progress:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:max="5000"
        android:id="@+id/fiveKmProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@id/fiveKmProgress"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtCompleted"
        android:visibility="gone"
        android:text="Completed!"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fiveKmProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
