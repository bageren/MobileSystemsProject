<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bakerapps.mobilesystemsproject.LeaderboardActivity">

    <TextView
        android:id="@+id/txtMyScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY SCORE"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/myScore"
        android:layout_below="@id/txtMyScore"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtTop10"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="TOP 10"
        android:layout_below="@id/myScore"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/leaderboard"
        android:textAlignment="center"
        android:layout_below="@id/txtTop10"
        android:layout_width="match_parent"
        android:layout_height="350sp"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"/>

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goBack"
        android:layout_below="@id/leaderboard"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
